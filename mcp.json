{
  "mcpServers": {
    "email": {
      "command": "node",
      "args": ["<absolute_path_to>dist/index.js"],
      "description": "Jmap Mail Server integration via JMAP protocol",
      "env": {
        "JMAP_BASE_URL": "https://your-mail-server.com",
        "JMAP_USERNAME": "your-username@example.com",
        "JMAP_PASSWORD": "your-password"
      }
    }
  }
} 
